<launch>
  <!-- Arguments -->
  <arg name="set_base_frame" default="base_footprint"/>
  <arg name="set_odom_frame" default="odom"/>
  <arg name="set_map_frame"  default="map"/>

  <!-- Gmapping -->
  <node pkg="gmapping" type="slam_gmapping" name="carrier_ros_slam_gmapping" output="screen">
    <param name="base_frame" value="$(arg set_base_frame)"/>
    <param name="odom_frame" value="$(arg set_odom_frame)"/>
    <param name="map_frame"  value="$(arg set_map_frame)"/>
    <remap from="scan" to="right/scan" />
    <rosparam command="load" file="$(find carrier_ros_slam)/config/gmapping_params.yaml" />
  </node>

  <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find carrier_ros_slam)/rviz/carrier_ros_gmapping.rviz"/>
</launch>
